<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{user.username}}'s Profile - ANIMO EATS</title>
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="/styles/shared_styles/reviews.css">
    <link rel="stylesheet" href="/styles/morestyles/userProfile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/b496b1e4d0.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="home">
            <a href="/">ANIMO
                <img style="height: 40px;" src="/icons/ANIMOEATS_logo.png" alt="logo">
                EATS</a>
        </div>
        <div class="navlink"> <a href="/restoList">Restaurants</a> </div>
        <div class="profile"><button id="profileBtn"> Log-in <i class="fa fa-solid fa-user"></i></button></div>
    </div>

    <div class="profile-container">
        <div class="section-title">User Profile</div>
        <div class="profile-card">
            <div class="profile-picture">
                <img src="{{user.avatar}}" alt="Profile Picture">
            </div>
            <div class="profile-info">
                <div class="profile-name">{{user.username}}</div>
                <div class="profile-bio">{{user.bio}}</div>
            </div>
        </div>

        <div class="section-title">Statistics</div>
        <div class="stats-section">
            <div class="reviews-made">
                <div class="reviews-count">{{user.stats.reviewsMade}}</div>
                <div>Reviews Made</div>
            </div>
            <div class="reviews-placeholder">
                <div class="reviews-count">{{user.stats.reputation}}</div>
                <div>Reputation</div>
            </div>
            <div class="rating-distribution">
                {{#each ratingDistribution}}
                <div class="rating-bar">
                    <span class="rating-number">{{star}}</span>
                    <div class="rating-progress-tube">
                        <div class="rating-progress" style="width: {{percentage}}%"></div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="section-title">Recent Reviews</div>
        <article class="reviews">
            {{#each reviews}}
            <div class="review-container">
                <img class="display-pic" src="{{establishment.bannerImage}}" alt="{{establishment.name}}">
                <div class="heading">{{../user.username}}</div>
                <div class="star-rating">
                    <img class="star-icon-review" src="/icons/star.png" alt="star icon"> {{rating}}
                </div>
                <div class="establishment">reviewing <a href="/restoProfile/{{establishment._id}}">{{establishment.name}}</a></div>
                <div class="description">{{body}}</div>
                <div class="date">{{createdAt}}</div>
                {{#if edited}}
                <div class="edit-tag">edited</div>
                {{/if}}
                <div class="vote">
                    <button class="upvote"><i class="fa-solid fa-up-long"></i></button>
                    <button class="downvote"><i class="fa-solid fa-down-long"></i></button>
                </div>
            </div>
            {{/each}}
        </article>
    </div>

    <script src="/scripts/profileModal.js"></script>
</body>
</html>
